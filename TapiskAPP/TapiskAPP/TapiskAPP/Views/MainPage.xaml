             x:Class="TapiskAPP.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Xamarin &#xf2bb; Forms and Prism!"
               FontSize="Large">
            <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String" 
